-- create a submission
template ParticipantSubmission
  with 
    participant: Party 
    client: Party
    -- submissionId: Text
    name: Text 
    desc:  Text
    submission: Text
    challengeId: Text
    participants: [Party]
  where
    signatory participant 
    observer participants
    observer client
    

    controller participant can 
       AddUpdateSubmission: ContractId ParticipantSubmission 
        with 
          newDesc: Text 
          newName: Text 
          newChallengeId: Text 
        do create this with participant, name=newName, desc=newDesc, challengeId=newChallengeId, participants=participants
  
